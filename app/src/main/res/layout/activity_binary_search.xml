        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/algogif"
            android:layout_width="365dp"
            android:layout_height="163dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="812dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:src="@drawable/greatgifbinary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="348dp"
            android:layout_height="809dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/aldrich"
            android:text="The Binary Search Algorithm finds an item from a list of sorted items.\n
\nThe algorithm works by repeatedly dividing a given list in half where the desired value is contained until all possible locations are narrowed down to just one.\n
\nStep 1: Find the middle element of the list.\n Middle index = (low index + high index) / 2  \n
\nStep 2: Compare search element with middle element. If middle and search element are equal, save index and terminate function. \n
\nStep 3: Else, Check if search element is smaller or larger than middle element.\n
\nStep 4: If search element is smaller than middle element, repeat steps 1 through 3 for left sublist of middle element.\n.
\nStep 5: If search element is larger than middle element, repeat steps 1 through 3 for right sublist of middle element.\n
\nStep 6: Repeat process until the search element in list of sublist contains only one element."
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/algogif"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:text="Binary Search Process"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/algogif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.992" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="74dp"
            android:layout_height="49dp"
            android:layout_marginTop="680dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mvpdown" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>